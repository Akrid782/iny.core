{
  "name": "akird782/iny-core",
  "description": "Базовый модуль для быстрой разработки в bitrix",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "n.ivanov",
      "email": "akrid782@mail.ru"
    }
  ],
  "scripts": {
    "test:all": [
      "@test:phplint",
      "@test:phpcs",
      "@test:phpmd"
    ],
    "test:phplint": "vendor/bin/phplint --ansi",
    "test:phpcs": "vendor/bin/phpcs --standard=phpcs.xml --runtime-set testVersion 8.1  ./",
    "test:phpmd": "vendor/bin/phpmd ./ ansi /home/nivanov/ni.core/local/modules/iny.core/phpmd.xml"
  },
  "require": {
    "php": "^8.0",
    "wikimedia/composer-merge-plugin": "dev-master"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "3.7.*",
    "slevomat/coding-standard": "8.14.*",
    "phpunit/phpunit": "10.2.*",
    "overtrue/phplint": "9.0.*",
    "phpmd/phpmd": "^2.14.1"
  },
  "extra": {
    "merge-plugin": {
      "require": [
        "../../../bitrix/composer-bx.json"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "wikimedia/composer-merge-plugin": true
    }
  },
  "autoload": {
    "psr-4": {
      "INY\\Core\\": "lib"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "INY\\Core\\Test\\PHPUnit\\": "test/PHPUnit"
    }
  }
}
