{
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "globals": {
    "$": "readonly",
    "BX": "readonly"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-unresolved": "warn",
    "prettier/prettier": "error"
  },
  "ignorePatterns": [
    "**/**.bundle.js",
    "**/vendor/*.js",
    "**/**.min.js",
    "**/dist/**"
  ]
}
